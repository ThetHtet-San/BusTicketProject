@model Com.MrIT.ViewModels.VmStaff
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">

        <div class="row">
            <div class="col-sm-4">
                <label asp-for="Code"></label>
            </div>
            <div class="col-sm-4">
                @Model.Code
                <input type="hidden" asp-for="ID" />
                <input type="hidden" asp-for="Active" />
                <input type="hidden" asp-for="SystemActive" />
                <input type="hidden" asp-for="CreatedBy" />
                <input type="hidden" asp-for="CreatedOn" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-sm-4">
                @Model.Name
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                <label asp-for="Address"></label>
            </div>
            <div class="col-sm-4">
                @Model.Address
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                <a href="@Url.Action("CreateEducation","Staff", new { a = System.Net.WebUtility.UrlEncode(Model.EncryptId)})" class="btn btn-primary">New Education</a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Year</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.EducationList)
                            {
                                <tr>
                                    <td> <a href="@Url.Action("EditEducation", "Staff", new { a= System.Net.WebUtility.UrlEncode (item.EncryptId) })">Edit</a></td>
                                    <td>@item.Type</td>
                                    <td>@item.Description</td>
                                    <td>@item.Year</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-sm-12">
                <a href="@Url.Action("CreateExperience","Staff", new { a= System.Net.WebUtility.UrlEncode(Model.EncryptId)}) " class="btn btn-primary">New Experience</a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Position</th>
                            <th>Company</th>
                            <th>From Year</th>
                            <th>To Year</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.Experiences)
                            {
                                <tr>
                                    <td> <a href="@Url.Action("EditExperience","Staff" , new { a= System.Net.WebUtility.UrlEncode(item.EncryptId)})">Edit</a></td>
                                    <td>@item.Position </td>
                                    <td> @item.Company</td>
                                    <td>@item.FromYear</td>
                                    <td>@item.ToYear</td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>